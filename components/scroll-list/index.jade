// Scroll List Component --Horizontal
section.scroll-list__container.scroll-list--horizontal
  .scroll-list__button-container
    | Primary Action
  .scroll-list
    // List Item (This is the fragment you should be repeating)
    each val in n
      .scroll-list__item
        span.scroll-list__item__label Item
        span.scroll-list__item__delete-button
          i.material-icons delete
          span.scroll-list-item__delete-button__confirm Delete
      // /List Item

// /Scroll List Component --Horizontal

script.
  $(document).ready(function() {

    // Select
    $(document).on('click touchend', '.scroll-list__item', function(e) {
      $('.scroll-list__item').removeClass('is-active');
      $(this).addClass('is-active');
    })
    
    
    // Arm Deletion
    $(document).on('click touchend', '.scroll-list__item__delete-button', function(e) {
      $(this).addClass('is-primed');
      var self = this;
      setTimeout(function() {
        $(self).removeClass('is-primed');
      }, 2000)
    });
    
  });
